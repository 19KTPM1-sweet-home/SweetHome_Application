<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1 logo">
                <a class="logo-link" href="/"><p>Sweet Home</p></a>
            </span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
                aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse nav-list" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link active" href="/buy/categories">Buy</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" href="/">Sell</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" href="/">Rent</a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link active" href="#">Contact</a>
                    </li>
                </ul>

                <a href="/login">
                    <button class="btn justify-content-end signin-btn">
                        Login
                    </button>
                </a>

                <span class="slash">/</span>

                <a href="/signup">
                    <button class="btn me-2 justify-content-end signup-btn">
                        Sign up
                    </button>
                </a>
            </div>

        </div>
    </nav>

    {{!-- begin: Banner --}}
    <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">

        <div class="carousel-inner banner-wrapper">
            <div class="carousel-item active" data-bs-interval="10000">
                <div class="banner-overlay"></div>
                {{!-- ../../images/banner-background-1.jpg --}}
                <img src="http://n.sinaimg.cn/sinakd10109/110/w1100h610/20201215/39e1-kffctcc2933703.png" class="d-block w-100 banner-img" alt="Banner" />
                <div class="carousel-caption d-none d-md-block welcome-banner">
                    <h1>Welcome to Sweet Home</h1>
                    <p>Men make houses, women make homes.</p>
                    <div class="input-group mb-3 search-bar">
                        <input type="text" class="form-control search-input" placeholder="Enter an address, neighborhood, city,..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary search-btn" type="button">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{!--end: Banner --}}
    {{{body}}}
        <!-- Subscribe form and footer links -->
        <div class="footer">
            <div class="row mt-5">
                <div class="col-8 subscribe-section">
                    <div class="tm-bg-gray p-5 h-100">
                        <h3 class="tm-text-primary mb-3">Do you want to know latest houses?</h3>
                        <p class="mb-5 text-info">Please subscribe our website for upcoming new houses and latest information
                            about our
                            lands. Thank you.</p>
                        <form class="row g-3">

                            <div class="col-auto">
                                <input type="email" class="form-control" id="inputPassword2"
                                    placeholder="Enter your email">
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary mb-3">Subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-4 about-us-section">
                    <div class="p-5 tm-bg-gray h-100">
                        <h3 class="tm-text-primary mb-4">About US</h3>
                        <ul class="list-unstyled tm-footer-links">
                            <li><a href="#">Hotline</a></li>
                            <li><a href="#">License Terms</a></li>
